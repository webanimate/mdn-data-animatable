{
  "name": "mdn-data-animatable",
  "version": "1.1.12",
  "description": "Fork of mdn-data with all but animatable CSS properties removed",
  "main": "index.js",
  "author": "Web Animate <60752454+webanimate@users.noreply.github.com>",
  "license": "CC0-1.0",
  "private": false,
  "homepage": "https://github.com/webanimate/mdn-data-animatable#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webanimate/mdn-data-animatable.git"
  },
  "files": [
    "api/*.json",
    "css/*.json",
    "l10n/*.json"
  ],
  "scripts": {
    "c": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "gen": "node generate.js",
    "fix": "yarn gen && yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "eslint --fix \"**/*.*\"",
    "fix:prettier": "prettier --write \"**/*.*\"",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint \"**/*.*\"",
    "lint:prettier": "prettier --check \"**/*.*\"",
    "up": "yarn upgrade-interactive && ncu -i && yarn"
  },
  "devDependencies": {
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-json": "^3.0.0",
    "fs-extra": "^10.0.0",
    "mdn-data": "^2.0.20",
    "prettier": "^2.3.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "plugins": [
      "json"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:json/recommended",
      "prettier"
    ]
  },
  "prettier": {
    "printWidth": 280,
    "semi": false,
    "singleQuote": true
  },
  "keywords": [
    "data",
    "mdn",
    "mozilla",
    "animatable",
    "properties",
    "css"
  ]
}
